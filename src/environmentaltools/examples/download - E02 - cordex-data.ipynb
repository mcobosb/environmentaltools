import os
from datetime import datetime

from download_esgf import main
from environmentaltools.common import read, save

info_creeks = read.xlsx("Caracteristicas_Ramblas.xlsx")

download = True
for creek in [info_creeks.index[19]]:
    if not download:
        # Create the query file
        main.main(creek, download)
    else:
        # if not os.path.exists(creek + "/" + creek + "_seleccion.csv"):
        # Download the seleccion file ids of queries
        info_cordex = read.xlsx(creek + "/" + creek + "_queries.xlsx")
        models = info_cordex["driving_model"].unique()
        ids = []
        for model in models:
            filter = info_cordex.loc[
                (
                    (info_cordex["driving_model"] == model)
                    & (info_cordex["ensemble"] == "['r1i1p1']")
                    & (info_cordex["geo_units"] == "['degrees']")
                )
            ]
            dates = [
                datetime.strptime(str(date), "%Y%m%d")
                for date in filter.loc[:, "version"]
            ]
            new_date = max(dates)
            str_date = datetime.strftime(new_date, "%Y%m%d")
            ids.append(filter.loc[filter["version"] == int(str_date)].index.values[0])

        save.to_txt(ids, creek + "/" + creek + "_seleccion.csv", format="%d")

        print("Downloading " + creek)
        creek = "C:/Users/Usuario/Desktop/Rio Aguas/Rio Aguas"
        main.main(creek, bootstrap=False, pydap=False)
